{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es2018",
        "outDir": "dist",
        "lib": ["es2018", "dom"],
        "esModuleInterop": true,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "dist"]
}
